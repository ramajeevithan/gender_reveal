{
  "rules": {
    ".read": false,
    ".write": false,
    "votes": {
      ".read": true,
      ".write": "auth != null"
    },
    "status": {
      ".read": true,
      ".write": "auth != null"
    },
    "voters": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$uid": {
        ".read": "auth != null && (auth.uid === $uid || auth.token.email != null)",
        ".write": "auth != null && (auth.uid === $uid || auth.token.email != null)"
      }
    }
  }
}